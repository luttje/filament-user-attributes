{
    "preset": "psr12",
    "rules": {
        "class_attributes_separation": {
            "elements": {
                "const": "one",
                "method": "one",
                "property": "one",
                "trait_import": "one",
                "case": "none"
            }
        },
        "no_extra_blank_lines": {
            "tokens": [
                "break",
                "case",
                "continue",
                "curly_brace_block",
                "default",
                "extra",
                "parenthesis_brace_block",
                "return",
                "square_brace_block",
                "switch",
                "throw",
                "use",
                "use_trait"
            ]
        }
    }
}
